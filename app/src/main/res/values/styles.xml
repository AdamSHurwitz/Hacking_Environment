<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <!-- Status Bar | Action Bar | Navigation Bar -->

        <!-- color of Status Bar and Menu Icons (use 700 color) -->
        <item name="colorPrimaryDark">@color/status_bar</item>
        <!--TODO: Add ActionBar With Partial Opaqueness -->
        <!-- opaqueness of Status Bar: Needs to Be Transparent for DrawerView -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- color of Status Bar -->
        <!--<item name="android:statusBarColor">#1976D2</item>-->
        <!-- color of Action Bar (use 500 color) -->
        <item name="colorPrimary">@color/primary_color</item>
        <!-- color of Action Bar text-->
        <item name="android:textColor">#B2DFDB</item>
        <!-- color of Action Bar menu text-->
        <item name="android:actionMenuTextColor">#FFA000</item>
        <!-- color of Popup Menu-->
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <!-- color of Navigation Bar-->
        <item name="@android:navigationBarColor">#2196F3</item>

        <!-- enable overlay mode -->
        <!--<item name="android:actionBarStyle">@style/AppActionBarTheme</item>-->
        <!--<item name="actionBarStyle">@style/AppActionBarTheme</item>-->
        <item name="android:windowActionBarOverlay">true</item>

        <!-- activity elements -->
        <!-- window background -->
        <item name="@android:windowBackground">@color/window_background</item>
        <!-- text color -->
        <item name="android:textColorPrimary">#B2DFDB</item>
        <!-- accent coloring for views (ie: Checkboxes, EditText) -->
        <item name="colorAccent">#B2DFDB</item>
        <!--background color of buttons-->
        <item name="colorButtonNormal">#2196F3</item>


    </style>

    <!-- color of popup menu-->
    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#2196F3</item>
    </style>

    <style name="AsyncTaskDetailView" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColor">#000</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
